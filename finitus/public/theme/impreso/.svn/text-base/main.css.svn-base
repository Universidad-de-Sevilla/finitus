body {
	background: #cccccc ;
	margin: 0;
	padding: 0;
	font: medium arial, sans-serif;
	color: #444;
	}
	
#wrap {
	text-align: left;
	width: 17cm;
	margin: 3px auto;
	padding: 0;
	background: #fff; 
	}	

#contenido {
	padding: 0px 15px;
	font-size: small;
	}

#logo {
	padding: 10px;	
	float: left;
	background-color: white;
	}

.salto {
    page-break-after:always
    }
	
/* -- Propiedades generales para etiquetas básicas -- */

img { border: none; }

a	{
	color: #07a;
	text-decoration: none;
	outline: none;
	}
	
a:hover { color: #d60; }

h1	{
	color: #000;
    text-align: center;
	font: large times, serif;
    font-weight: bold;
	margin-top: 10px;
	margin-bottom: 10px;
	padding:0;
	}

h2	{
	color: #000;
	font: medium times, serif;
    font-weight: bold;
	margin-top:5px;
	margin-bottom: 3px;
	padding:0;
	}

h3	{
	color: #000;
	font: small times, serif;
    font-weight: bold;
	margin-top:3px;
	margin-bottom: 2px;
	padding:0;
	}
	 
ul li a {
	padding-left: 12px;
	}

table {
	margin: 0px 0px 8px 0px;
	border: 1px;
    padding: 0px
	}

td, th {
	text-align: left;
	font-size: medium;
	border: solid 1px #000;
	background: #fff;
	color:#000;
	padding: 0.1em 0.4em;
	}

th	{
	text-align: center;
	background: #ccc;
	font-weight: bold;
	}
td.noborde {
    border: 0px;
    }
/* -- Propiedades específicas --*/
p.aviso {
    color: blue;
	background: #eef url('../../icon/16x16/information.png') no-repeat 5px 5px;
    padding:5px;
    padding-left: 30px;
	border: 1px dashed blue;
    }

p.error {
    color: red;
	background: #fdd url('../../icon/16x16/cross.png') no-repeat 5px 9px;
    padding: 5px;
	padding-left: 30px;
	border: 1px dashed red;
    }
